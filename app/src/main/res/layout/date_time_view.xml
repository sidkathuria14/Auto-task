<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBlue"
    android:layout_width="match_parent"
    android:id="@+id/timeCondition"
    android:padding="10sp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:text="Selected Date and Time"
            android:textColor="@color/colorPure"
            android:textSize="18sp"
            android:layout_weight="8"
            android:layout_width="0sp"
            android:padding="10sp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnEditTime"
            android:layout_weight="1"
            android:padding="10sp"
            android:layout_gravity="center"
            android:layout_width="0sp"
            android:background="@drawable/ic_edit_white_24dp"
            android:layout_height="20sp" />
        <Button
            android:id="@+id/btnCancelTime"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:padding="10sp"
            android:layout_gravity="center"
            android:background="@drawable/ic_cancel_white_24dp"
            android:layout_height="20sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDateNTime"
        android:text="Date and Time"
        android:textColor="@color/colorPure"
        android:textSize="18sp"
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>