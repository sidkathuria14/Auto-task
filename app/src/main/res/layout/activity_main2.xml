<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnUserRating"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@drawable/circle_button"
        android:fontFamily="casual"
        android:text="coz your rating matter "
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRatingNearbys"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangle_button"
        android:fontFamily="monospace"
        android:text="How safe are areas near you?!"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvtip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Tip: NO RULES!!"
        android:textColor="#420420"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvtip1"
        android:layout_margin="20dp"
        android:textColor="#420420"
        android:text="If you're in danger, in trouble, or inanyway threatended, you do anything you can to get away and get to safety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</LinearLayout>
